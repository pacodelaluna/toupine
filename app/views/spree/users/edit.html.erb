<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= Spree.t(:editing_user) %></h3>
    </div>
    <div class="panel-body">
      
    </div>
  </div>
</div>

<section class="page">
  <div class="categories">
    <div class="categories_content">
      <h2><%= accurate_title %></h2>
      <dl id="user-info">
        <dt><%= Spree.t(:email) %></dt>
        <dd><%= @user.email %> (<%= link_to Spree.t(:edit), spree.edit_account_path %>)</dd>
      </dl>
    </div>
  </div>
  <div class="centre_page">
    <div class="centre_page_content user_edit">
      <h2><%= Spree.t(:editing_user) %></h2>
      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
      
      <%= form_for @user, :as => @user, :class => "user_edit", :url => spree.user_path(@user), :method => :put  do |f| %>
        <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
        <p>
          <%= f.submit Spree.t(:update), :class => 'btn btn-primary' %>
        </p>
      <% end %>
    </div>
  </div>
</section>